# EditorConfig is awesome: http://EditorConfig.org
#
# top-most EditorConfig file
root = true

[*.py]
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[*.{md,markdown,rst}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
max_line_length = 80

[*.json]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[LICENSE]
end_of_line = lf
